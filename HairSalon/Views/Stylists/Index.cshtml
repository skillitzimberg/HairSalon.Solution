@{
  Layout = "_Layout";
}
<div class="container index">
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <span class="logo"><a href="/">HairSalon</a></span>
    <ul>
      <li><a href="/stylists/new">Add Stylist</a></li>
    </ul>
  </nav>
  <div class="content">
    <h3>Stylists</h3>
    @if (@Model.Count == 0)
    {
      <h3>No stylists have been added yet!</h3>
    }

    @foreach (var stylist in Model)
    {
      <h4><a href='/stylists/@stylist.GetId()'>@stylist.GetFirstName() @stylist.GetLastName()</a></h4>
    }
  </div>
</div>
