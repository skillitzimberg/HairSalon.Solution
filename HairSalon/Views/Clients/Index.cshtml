@{
  Layout = "_Layout";
}
<div class="container index">
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <span class="logo"><a href="/">HairSalon</a></span>
    <ul>
      <li><a href="#">About</a></li>
    </ul>
  </nav>
  <h1 id="banner">HairSalon Clients</h1>
  <ul>
    @if (Model.Count == 0)
    {
      <p>No clients are currently assign to this stylist.</p>
    }
    @if(Model.Count != 0)
    {
      @foreach (Client client in Model)
      {
        <li>@client.GetDescription()</li>
      }
    }
    </ul>
    <a href="/clients/new">Add a new item.</a>

    <form action="/clients/delete" method="post">
      <button type="submit" name="button">Clear All Clients</button>
    </form>
</div>
